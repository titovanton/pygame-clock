# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,rst,ini,pyw}]
indent_size = 4

[*.py]
max_line_length=119

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
